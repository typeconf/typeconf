{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "target": "es2022",
    "module": "NodeNext",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
} 